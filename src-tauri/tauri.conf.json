{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "1chat",
    "version": "0.1.4"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "app.1chat.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://oversea-1251190880.cos.accelerate.myqcloud.com/1chat/latest.json",
        "https://gist.githubusercontent.com/IceEnd/710378622d3551b06a3540e206fdc10a/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY1QjZDQUY4NDlGRENEMTgKUldRWXpmMUorTXEyOVJiODhJR05qYTZSeGV4Wm5EaGI5cXVjS2xRRnl6NTVCLzFMK1JqbDV4NnMK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "minHeight": 600,
        "minWidth": 600,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/tray/icon.png",
      "iconAsTemplate": true
    }
  }
}
